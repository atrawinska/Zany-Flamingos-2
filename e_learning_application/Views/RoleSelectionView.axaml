<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:e_learning_application.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
            x:DataType="vm:RoleSelectionViewModel"
            x:Class="e_learning_application.Views.RoleSelectionView">


    <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock  HorizontalAlignment="Center" Foreground="Black" Margin="10" FontSize="20">Welcome to Xlearning.</TextBlock>
        <TextBlock  HorizontalAlignment="Center" Foreground="Black" Margin="10" FontSize="18" >Choose your role:</TextBlock>
        <Button Margin="10" Content="Login as Student" Command="{Binding SelectStudentCommand}"/>
        <Button Margin="10" Content="Login as Teacher" Command="{Binding SelectTeacherCommand}"/>
    </StackPanel>

</UserControl>