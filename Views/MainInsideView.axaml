<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:e_learning_application.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
          x:DataType="vm:MainInsideViewModel"
            x:Class="e_learning_application.Views.MainInsideView"
                    >

 <StackPanel Background="White">
    <DockPanel Height="60" LastChildFill="True">

        <!-- Create a StackPanel to align the elements horizontally in one line -->
            <!-- First Button -->
            <Button Padding="30,20,30,20" VerticalAlignment="Stretch" Content="Courses"  HorizontalAlignment="Left" Foreground="Black" Background="#00FFFFFF"  BorderThickness="0"/>
                    <!-- Second Button -->
            <Button Padding="30,20,30,20" VerticalAlignment="Stretch" Content="Profile" DockPanel.Dock="Right"  HorizontalAlignment="Right" Foreground="Black" Background="#00FFFFFF"  BorderThickness="0"/>
   
            <!-- TextBlock in the center -->
            <TextBlock  Text="Role" VerticalAlignment="Center" DockPanel.Dock="Right"  HorizontalAlignment="Right"  Foreground="Black" Margin="30,10,30,10"/>


    </DockPanel>

           
                
                
            </StackPanel>
</UserControl>
